<div class="container">
  {{> admin/form-msgs}}



 <div class="row p-4">
     <h2>All Post</h2>
<table class="table table-striped table-brodened">
    <thead>
        <th>id</th>
        <th>Thumbnail</th>
        <th>title</th>
        <th>Allow Comments</th>
        <th>Status</th>
        <th>Category</th>
        <th>Date</th>
        <th>Edit</th>
        <th>Delete</th>
      
    </thead>
    <tbody>
      

            {{#each data}}
              <tr>
            <td>{{_id}}</td>
            <td><img src="/uploads/{{file}}" alt="" height="50"></td>
            <td>{{title}}</td>
            <td>{{allowComments}}</td>
            <td>{{status}}</td>
            <td>{{category}}</td>
            <td>{{GenerateTime date 'MMMM Do YYYY'}}</td>
            <td><a href="/admin/posts/edit/{{_id}}"><i class="fa fa-fw fa-edit"></i></a></td>
            <td>
              <form action="/admin/posts/delete/{{_id}}?_method=delete" method="post" >
              <button type="submit" class='btn btn-danger'>Delete</button>
              </form>
              </td>
           
          </tr>
            
            {{/each}}
          
            
    
    </tbody>
</table>
</div>
</div>